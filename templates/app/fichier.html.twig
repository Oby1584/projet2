{% extends "base.html.twig" %}

{% block title %}Fichier véhicule{% endblock %}

{% block body %}
<div class="container">
<table class="table table-dark table-striped">
<thead>
    <tr>
    <th>#</th>
    <th>Marque</th>
    <th>Modèle</th>
    <th>Photo</th>
    <th>Description</th>
    <th>Date d'enregistrement</th>
    <th>Prix journalier</th>
    <th>Option</th>
    </tr>
</thead>
<tbody>
    {% for vehicule in fichier %}
        
    <tr>
        <td>{{ vehicule.id}}</td>
        <td>{{ vehicule.marque}}</td>
        <td>{{ vehicule.modele}}</td>
        <td>{{ vehicule.photo}}</td>
        <td>{{ vehicule.description}}</td>
        <td>{{ vehicule.dateEnregistrement|date('d/m/Y à H:i:s') }}</td>
        <td>{{ vehicule.prixJournalier}}</td>
        <td>
            <a href="{{ path('app_voir', {id: vehicule.id} ) }}" class="text-info">voir</a>
            <a href="{{ path("app_modifier", {id:vehicule.id}) }}" class="text-warning">modifier</a>
            <a href="{{ path('app_supprimer', {id: vehicule.id}) }}" class="text-danger">supprimer</a>
            

        </td>
        
    </tr>
    {% endfor %}
</tbody>
</table>
</div>

{% endblock %}